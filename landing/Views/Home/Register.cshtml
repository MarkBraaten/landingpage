@model User
<div class="text-center">
    <div class="background">
        <form class="form-signin" asp-action="Create" asp-controller="Home" method="post">
            <h1 class="h3 mb-3 font-weigt-normal">Admin sign up</h1>

            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName" class="sr-only"></label>
            <input class="form-control" asp-for="FirstName" placeholder="John" required>
            <br>
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName" class="sr-only"></label>
            <input class="form-control" asp-for="LastName" placeholder="Hancock" required>
            <br>

            <span asp-validation-for="Email"></span>
            <label asp-for="Email" class="sr-only"></label>
            <input asp-for="Email" class="form-control" placeholder="Email address" required>
            <br>

            <span asp-validation-for="Password"></span>
            <label asp-for="Password" class="sr-only"></label>
            <input asp-for="Password" class="form-control" placeholder="Password" required>
            <br>

            <span asp-validation-for="Confirm"></span>
            <label asp-for="Confirm" class="sr-only"></label>
            <input class="form-control" asp-for="Confirm" placeholder="Confirm Password" required>
            <br>


            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            <a asp-action="Login">Login</a>
        </form>
    </div>
</div>